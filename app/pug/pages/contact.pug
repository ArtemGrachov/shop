extends ../templates/layout.pug

block variables
    - var title = "Contact us"

block content
    +page-nav(title)
    .container
        main.main.block.block_bg
            .title.block__header Drop us a line.
            form.block__body.clearfix
                .form_two-groups
                    .form-group.form-group_sm
                        input(type="text" placeholder="Name").input.input_msg-form
                        input(type="email" placeholder="Email").input.input_msg-form
                        input(type="text" placeholder="Subject").input.input_msg-form
                    .form-group.form-group_lg
                        textarea.textarea(placeholder="Your comment")
                .form__footer
                    button(type="submit").btn.btn_md Submit
        aside.sidebar
            ul.aside-list
                +aside-shopmint()