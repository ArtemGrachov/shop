extends ../templates/layout.pug

block variables
    - var title = "Checkout"

block content
    +page-nav(title)
    .container
        .block.block_bg
            .block__body.clearfix
                .title.title_md.text_red.checkout-left Do you already have an account?
                a(href="#").btn.btn_xs.checkout-right Login
        .block.block_bg
            .block__body.clearfix
                .title.title_md.text_red.checkout-left Create an accountif you don't have one
                a(href="#").btn.btn_xs.checkout-right Create
        form.block.block_bg
            .block__header
                .title.title_md.text_red Please enter your billing address.
            .block__body.checkout-form
                .form-group.form-third
                    label(for="first_name").label_strong First name 
                        span.text_red *
                    input(type="text" id="first_name").input
                .form-group.form-two-thirds
                    label(for="first_name").label_strong Last name 
                        span.text_red *
                    input(type="text" id="last_name").input.form-third
                .form-group.form-third
                    label(for="email").label_strong Email 
                        span.text_red *
                    input(type="email" id="email").input
                .form-group.form-two-thirds
                    label(for="phone").label_strong Phone number 
                        span.text_red *
                    input(type="text" id="phone").input.form-third
                .form-group.form-third
                    label(for="address1").label_strong Address line 1 
                        span.text_red *
                    input(type="text" id="address1").input
                .form-group.form-third
                    label(for="address2").label_strong Address line 2
                    input(type="text" id="address2").input
                .form-group.form-third
                    label(for="phone2").label_strong Phone number
                    input(type="text" id="phone2").input
                .form-group.form-third
                    label(for="city").label_strong City / Town 
                        span.text_red *
                    input(type="text" id="city").input
                .form-group.form-third
                    label(for="zip").label_strong Zip code
                    input(type="text" id="zip").input
                .form-group.form-third
                    label(for="country").label_strong Select country
                    +dropdown(['Netherlands','Belgium','Luxemburg','France','Germany','Switcerland'],'country','checkout-dropdown')
        .block.block_bg
            .block__body.clearfix
                .title.title_md.text_red.checkout-left Please enter your shipping address.
                .checkout-right
                    input(type="checkbox" id="shipping_address").input_check
                    label(for="shipping_address") Use my billing address
        .block.block_bg
            .title.title_md.text_red.block__header Your order
            table.checkout-table
                thead
                    tr
                        th Item
                        th Quantity
                        th Unit price
                        th Total
                tbody
                    tr
                        td
                            img.table__img(src="https://www.customink.com/mms/images/catalog/styles/297300/catalog_detail_image_large.jpg")
                            | Adidas Commander TD3 Code G48794
                        td 12
                        td 29,99 USD
                        td.text_strong 159,99 USD
                    tr
                        td
                            img.table__img(src="https://www.customink.com/mms/images/catalog/styles/297300/catalog_detail_image_large.jpg")
                            | Adidas Axz 1 Code V21609
                        td 2
                        td 39,99 USD
                        td.text_strong 169,99 USD
                    tr
                        td
                            img.table__img(src="https://www.customink.com/mms/images/catalog/styles/297300/catalog_detail_image_large.jpg")
                            | Adidas Barricade 6 Andy Murray Code G40436
                        td 15
                        td 49,99 USD
                        td.text_strong 179,99 USD
                    tr
                        td
                            img.table__img(src="https://www.customink.com/mms/images/catalog/styles/297300/catalog_detail_image_large.jpg")
                            | Adidas Galaxy Arriba II Code G60635
                        td 20
                        td 59,99 USD
                        td.text_strong 189,99 USD
        include ../includes/discount-coupon.pug
        .block.block_bg
            .block__header
                .title.title_md.text_red Please select your payment method
            ul.block-list
                li.block-item
                    input(type="radio" id="direct_bank" name="bank").input_check
                    label(for="direct_bank").label_strong.label_sm Pay by Direct Bank Transfer
                li.block-item
                    input(type="radio" id="cheque" name="bank").input_check
                    label(for="cheque").label_strong.label_sm Pay by Cheque
                li.block-item
                    input(type="radio" id="paypal" name="bank" checked).input_check
                    label(for="paypal").label_strong.label_sm Pay by PayPal
        .right
            a(href="#").btn.btn_md.btn_primary Place order