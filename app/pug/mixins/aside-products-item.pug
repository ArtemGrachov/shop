mixin aside-products-item(name, price)
    li.aside-products-item
        .aside-products__pic
            img(src="https://www.customink.com/mms/images/catalog/styles/297300/catalog_detail_image_large.jpg" alt=name).aside-products__img
        .aside-products-descr
            .aside-products-descr__header #{name}
            .aside-products-descr__text Lorem ipsum dolor sit amet, consectetur...
        .aside-products-right
            .products__price #{price}
            .products__currency USD