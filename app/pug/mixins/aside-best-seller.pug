mixin aside-best-seller(mod)
    if mod
        - $class=" aside-item_" + mod
    else
        - $class=""

    li(class="aside-media-none aside-item" + $class)
        .aside__header
            | Best seller
            span.text_red .
        .aside__body
            ul.aside-thumbs-list
                +aside-thumbs-item('Einstein T-Shirt', '799')
                +aside-thumbs-item('Dope T-Shirt', '199')
                +aside-thumbs-item('Poker King T-Shirt', '439')