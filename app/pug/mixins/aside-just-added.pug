mixin aside-just-added(mod)
    if mod
        - $class=" aside-item_" + mod
    else
        - $class=""

    li(class="aside-media-none aside-item" + $class)
        .aside__header
            | Just added
            span.text_red .
        .aside__body
            ul.aside-thumbs-list
                +aside-thumbs-item('Happy T-Shirt', '289')
                +aside-thumbs-item('Beetles T-Shirt', '569')
                +aside-thumbs-item('Captain Awesome T-Shirt', '139')